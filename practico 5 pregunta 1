#include <stdio.h>

int main() {
    float P, costo;

    printf("Ingrese el peso de la carta en gramos: ");
    scanf("%f", &P);

    if (P > 0 && P < 50)
        costo = 1.50;
    else if (P > 50 && P <= 100)
        costo = 4.00;
    else if (P > 100 && P <= 200)
        costo = 6.00;
    else if (P > 200 && P <= 350)
        costo = 10.50;
    else if (P > 350 && P <= 500)
        costo = 15.00;
    else if (P > 500) {
        printf("NO PUEDE ENVIAR COMO CARTA\n");
        return 0;
    } else {
        printf("Peso inválido.\n");
        return 0;
    }

    printf("El costo de envío es: Bs. %.2f\n", costo);
    return 0;
}
