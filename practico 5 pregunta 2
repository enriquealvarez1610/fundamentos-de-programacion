#include <stdio.h>
#include <math.h>

int main() {
    float a, b, c, discriminante, x1, x2;

    printf("Ingrese el valor de a: ");
    scanf("%f", &a);
    printf("Ingrese el valor de b: ");
    scanf("%f", &b);
    printf("Ingrese el valor de c: ");
    scanf("%f", &c);

    discriminante = b * b - 4 * a * c;

    if (discriminante > 0) {
        x1 = (-b + sqrt(discriminante)) / (2 * a);
        x2 = (-b - sqrt(discriminante)) / (2 * a);
        printf("Las soluciones reales son:\n");
        printf("x1 = %.2f\n", x1);
        printf("x2 = %.2f\n", x2);
    } 
    else if (discriminante == 0) {
        x1 = -b / (2 * a);
        printf("Existe una unica solucion real:\n");
        printf("x = %.2f\n", x1);
    } 
    else {
        printf("No existen soluciones reales.\n");
    }

    return 0;
}
